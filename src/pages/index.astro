---
import Layout from "../core/components/templates/layout.astro";

import StatsDisplay from "@/core/components/organisms/stats-display/stats-display.astro";
import { METRICS_HOME } from "@/features/home/static/metrics";
import {
  CallToAction,
  HeroHome,
  Services,
  Testimonials,
  WhyChooseGym,
} from "../features/home/components/organisms";

const title = "Morros Training";
const description =
  "Descubre nuestras clases de entrenamiento grupales, calendario, beneficios y más en Morros Training. Únete a nuestras clases hoy mismo.";
const keywords = "entrenamiento, fitness, grupo, calendario, beneficios";
---

<Layout title={title} description={description} keywords={keywords}>
  <HeroHome />
  <StatsDisplay data={METRICS_HOME} />
  <WhyChooseGym />
  <Services />
  <Testimonials />
  <CallToAction />
</Layout>
