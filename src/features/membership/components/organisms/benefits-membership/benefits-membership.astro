---
import { CardBenefit } from "@/features/membership/components/molecules";
import { BENEFITS_MEMBERSHIP } from "@/features/membership/static/benefits";
---

<section class="benefits-membership box-animation" data-width="full">
  <h2 data-text="Beneficios de Ser Miembro" class="title">
    Beneficios de Ser Miembro
  </h2>
  <p
    data-text="Más que un gimnasio, una comunidad comprometida con tu bienestar"
    class="subtitle"
  >
    Más que un gimnasio, una comunidad comprometida con tu bienestar
  </p>
  <ul class="list-benefits">
    {BENEFITS_MEMBERSHIP.map((plan) => <CardBenefit {...plan} />)}
  </ul>
</section>

<style>
  @import url("./benefits-membership.css");
</style>
