---
const {
  id,
  label,
  type = "text",
  placeholder = "",
  required = true,
  maxlength = 50,
  regex,
  title,
} = Astro.props;
---

<label class="wrapper">
  {label}
  <input
    id={id}
    name={id}
    type={type}
    placeholder={placeholder}
    required={required}
    class="input"
    maxlength={maxlength}
    pattern={regex}
    title={title}
  />
</label>

<style>
  @import url("./input.css");
</style>
